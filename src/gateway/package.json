{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "Custom API Gateway for microservices",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
